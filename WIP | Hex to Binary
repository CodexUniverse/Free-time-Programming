#include <iostream>
#include <math.h>
#include <cmath> 

int main() {
	
	int hexDigit, Value[3], hextoDecimal[3], n = 0, i = 0, decimal, a;
	char userInput;

	std::cout << "Enter a hex digit: ";
	std::cin >> userInput;
	hexDigit = userInput;
	//std::cout << hexDigit << std::endl;

	while (hexDigit > 0) {

		Value[n] = hexDigit % 10;
		hexDigit /= 10;
		//std::cout << Value[n] << std::endl;
		n++;
	}

	while (n != -1) {
		hextoDecimal[i] = Value[n] * pow(16, n);
		decimal += hextoDecimal[i];
		std::cout << decimal << std::endl;
		i++;
		n--;
	}


}
